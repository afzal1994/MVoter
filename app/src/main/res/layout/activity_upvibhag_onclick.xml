<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context="com.example.mohdafzal.voter.Voterlist">
<RelativeLayout
    android:layout_margin="20dp"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/upvibhagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upvibhag"
        android:textColor="@color/black"
        android:textSize="16dp" />


</RelativeLayout>

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/rel1"
                android:id="@+id/rel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:id="@+id/incharge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upvibhag"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/incharge_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/oval_shape"
                    android:layout_weight="2"
                    android:id="@+id/call"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/call"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </RelativeLayout>

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView

                android:layout_below="@+id/rel2"
                android:layoutAnimation="@anim/layout_animated"
                android:id="@+id/upvibhagRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>
            <include
                layout="@layout/blurredloader"
                android:id="@+id/blurredloader"/>
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:orientation="vertical" >

        <ImageView
            android:layout_margin="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_view"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/logo" />
        <ListView
            android:id="@+id/left_drawer"
            android:layout_below="@+id/image_view"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@color/black"
            android:dividerHeight="1dp"
            android:background="@color/white"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
