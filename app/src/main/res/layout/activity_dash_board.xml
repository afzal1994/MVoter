<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.mohdafzal.voter.DashBoard">
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.mohdafzal.voter.DashBoard">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.mohdafzal.voter.DashBoard">
    <LinearLayout
        android:id="@+id/lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/deliveryindicator"
                app:srcCompat="@drawable/networkindicator"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <Button
                android:id="@+id/syncnowButton"
                android:background="@drawable/rippel"
                android:textColor="#fff"
                android:text="Sync Now"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/deliveryindicator"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        <Button

            android:layout_alignParentEnd="true"
            android:id="@+id/addnewvoter"
            android:textColor="#fff"
            android:background="@drawable/rippel"
            android:layout_gravity="end"
            android:text="+ Add New Voter"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />
        </RelativeLayout>


    </LinearLayout>

<LinearLayout
    android:layout_below="@+id/lin"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/area"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/areacount"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#07a0b8"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<LinearLayout
    android:id="@+id/lin1"
    android:visibility="gone"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_gravity="end"
        android:text="Voters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/arearec"
        android:layout_marginTop="5dp"
        android:layoutAnimation="@anim/layout_animated"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>
    <RelativeLayout
android:visibility="gone"
        android:id="@+id/booth"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="Booth Incharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/boothcount"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#07a0b8"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="end"
            android:text="Voters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/boothname"
            android:layout_marginTop="5dp"
            android:layoutAnimation="@anim/layout_animated"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/worker"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="Field Assistant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/workercount"

            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#07a0b8"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin3"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="end"
            android:text="Voters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/workername"
            android:layoutAnimation="@anim/layout_animated"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/voters"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="Voters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/votercount"

            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#07a0b8"
            android:text="500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
    <include
        layout="@layout/blurredloader"
        android:id="@+id/blurredloader"/>
</RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:orientation="vertical" >

        <ImageView
            android:layout_margin="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_view"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/logo" />
        <ListView
            android:id="@+id/left_drawer"
            android:layout_below="@+id/image_view"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@color/black"
            android:dividerHeight="1dp"
            android:background="@color/white"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
