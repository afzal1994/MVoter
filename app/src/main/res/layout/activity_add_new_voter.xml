<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mohdafzal.mvoter.AddNewVoter">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mohdafzal.mvoter.AddNewVoter">
    <LinearLayout
        android:id="@+id/lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:text="Voter List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/logout"

                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/power"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>

        <EditText
android:id="@+id/editTextSearch"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/search"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Search Name Phone Area Etc..."
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lin"
        android:background="@color/colorPrimaryDark"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:text="Personal Details"
            android:layout_height="45dp" />

    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:id="@+id/lin5"
        android:orientation="vertical"
        android:layout_below="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:background="#5cb85c"
            android:text="Edit"
            android:layout_gravity="end"
            android:layout_width="60dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/fname"
android:hint="First Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/mname"
            android:textColorHighlight="#000"
            android:hint="Middle Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /> <EditText
        android:id="@+id/lname"
        android:hint="Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <RadioButton
               android:buttonTint="@color/colorPrimaryDark"
               android:text="Male"
               android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <RadioButton
                android:buttonTint="@color/colorPrimaryDark"

                android:text="Female"

                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <EditText
            android:inputType="number"
            android:id="@+id/gln"
        android:hint="Gov. List Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /> <EditText
        android:inputType="number"

        android:id="@+id/aadharcard"
        android:hint="Adhar Card Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/spinnerItems"
android:layout_marginBottom="10dp"
            android:hint="First Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lin5"
        android:background="@color/colorPrimaryDark"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:text="Address"
            android:layout_height="45dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lin3"
        android:background="@color/colorPrimaryDark"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:text="Additional Details"
            android:layout_height="45dp" />

    </LinearLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>